{% extends 'base.html.twig' %}

{% block page_content %}
    <h1>Contact Info</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_contact_index') }}" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back</span>
        </a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.phone }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-primary btn-icon-split me-2 btn-sm">
            <span class="icon text-white-50">
                <i class="fas fa-edit"></i>
            </span>
            <span class="text">Edit</span>
        </a>

        <form method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}"
              onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
            <button class="btn btn-danger btn-icon-split btn-sm">
                <span class="icon text-white-50">
                    <i class="fas fa-trash"></i>
                </span>
                <span class="text">Delete</span>
            </button>
        </form>
    </div>

    <style>
        .me-2 {
            margin-right: 0.5rem !important;
        }
    </style>
{% endblock %}

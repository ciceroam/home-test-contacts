{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
<div class="row">
    <div class="col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
            {% if form.name.vars.required %}
                <span class="text-danger">*</span>
            {% endif %}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {% if form.name.vars.required %}
                <span class="text-danger">*</span>
            {% endif %}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="d-flex justify-content-end">
    <button class="btn btn-success btn-icon-split btn-sm">
        <span class="icon text-white-50">
            <i class="fas fa-check"></i>
        </span>
        <span class="text">{{ button_label|default('Save') }}</span>
    </button>
</div>
{{ form_end(form) }}

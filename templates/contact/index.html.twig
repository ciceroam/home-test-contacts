{% extends 'base.html.twig' %}

{% block page_content %}
    <h1>Contacts List</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_contact_new') }}" class="btn btn-primary btn-icon-split">
            <span class="text">New Contact</span>
        </a>
    </div>

    <table id="dataTable" class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td><a href="{{ path('app_contact_show', {'id': contact.id}) }}">{{ contact.name }}</a></td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td class="actions">
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}"
                       class="btn btn-info btn-icon-split btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-info-circle"></i>
                        </span>
                        <span class="text">View</span>
                    </a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}"
                       class="btn btn-primary btn-icon-split btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-edit"></i>
                        </span>
                        <span class="text">Edit</span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>

    <style>
        .actions {
            text-align: center;
        }

        .table-bordered {
            width: 100%;
            mso-cellspacing: 0;
        }
    </style>
{% endblock %}

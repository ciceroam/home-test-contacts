{% extends 'base.html.twig' %}

{% block login_content %}
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-lg-6">
            <div class="card o-hidden border-0 shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <form method="post" class="user">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <input type="email" id="inputEmail" name="_username"
                                   class="form-control form-control-user" placeholder="Enter Email Address..."
                                   value="{{ last_username }}" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" id="inputPassword" name="_password"
                                   class="form-control form-control-user" placeholder="Password" required>
                        </div>
                        <button class="btn btn-primary btn-user btn-block" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
    </style>
{% endblock %}
